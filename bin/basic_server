#!/usr/bin/env ruby -w

$: << 'lib'
require 'basic_server'

stype = ARGV.shift || 'gserver'

case stype
  when 'gserver' then
    trap("INT") {
      puts "Shutting down the server"
      exit
    }
    bgs = BasicGServer.new(8080)
    bgs.audit = true
    bgs.start
    bgs.join
  when 'tcpserver' then
    bts = BasicTCPServer.new(8080)
    bts.start
end